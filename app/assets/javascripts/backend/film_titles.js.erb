window.deleteUrl = '';
window.targetID = '';

function DeleteConfirm(data,id){
	window.deleteUrl = data;
	window.targetID = 'title_'+ id;
	console.log(window.targetID);
	// $("#modalConfirm").show();
//alert(data);
}

function DeleteSubmit(argument) {
	$.ajax({
		url: window.deleteUrl,
		// url: 'film_titles/abbbbb',
		type: 'DELETE',
		dataType: 'json',
		data: {_method: 'delete'},
		success: function(result){
			console.log(window.targetID)
			console.log(result)
			$("#modalConfirm").hide();
			$(".modal-backdrop").hide();
			if(result.IsSuccess)
			{
				alert('删除成功');
				$("#"+window.targetID).closest('tr').fadeOut();
			}
			else
			{
				alert('删除失败');
			}
		}
	});
}